<% include ../partials/head%>
<% include ../partials/header%>

<% include ../partials/message%>

<main>
        <div class="home">
            <div class="container">
                <div class="entry-header">
                    <h1>Hello World</h1>
                    <p>About Life, Images and Code</p>
                    <% if (currentUser != undefined){ %> 
                    <h3> WelCome <%=currentUser.username%></h3>                                     
                    <%   } %>
                    <button><a href="/posts/new">Create New Post</button>
                </div>

                <div class="entry-lists">
        		<% for (let i = 0; i < posts.length; i++) { %>
    				<article class="entry-items">
        				<div class="post-thumb" style="background-image:url(<%= posts[i].imgUrl%>)">
            					<a href="/posts/<%=posts[i]._id%>">
                					<h3 class="item-name"><%= posts[i].title%></h3>
                				<div class="item-author">
                    				<p><%= posts[i].author.username%></p>
                				</div>
            					</a>
        				</div>
    				</article>
				<% } %>

				</div>
               
            </div>
            
        </div>

        <div class="container">
            <div class="pagintor">
                <a href="#" class="more"> See More</a>
            </div>
        </div>
            
</main>


